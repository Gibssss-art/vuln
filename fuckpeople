-- Gibssss Hub | Luna UI (sanitized)
-- Safe version: does NOT interact with other players or game objects.
-- Only modifies local player's Humanoid properties (if present).

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Attempt to load Luna safely
local Luna
do
local ok, result = pcall(function()
local src = game:HttpGet("https://raw.githubusercontent.com/Nebulla-Softworks/Luna-Interface-Suite/main/source.lua")
return loadstring(src)()
end)
if ok and result then
Luna = result
else
warn("Luna failed to load or execute. UI features will be disabled. Error:", result)
end
end

if not Luna then
-- If Luna didn't load, stop here (script remains safe)
warn("Luna UI not available. Running in safe mode (no UI).")
return
end

-- Create Window
local Window = Luna:CreateWindow({
Name = "Gibssss Hub | Safe",
LoadingTitle = "Gibssss Hub",
LoadingSubtitle = "by Gibssss",
ConfigurationSaving = {
Enabled = true,
FolderName = "GibssssHub",
FileName = "ZConfig"
},
Discord = {
Enabled = false,
Invite = "",
RememberJoins = false
},
KeySystem = false
})

-- Home tab (required by Luna in your earlier script)
Window:CreateHomeTab({
SupportedExecutors = {
"Synapse X", "Krnl", "Fluxus", "Script-Ware",
"Electron", "Solara", "Wave", "Delta", "Xeno"
},
DiscordInvite = nil,
Icon = 1
})

-- Main tab
local Tab = Window:CreateTab({
Name = "Main",
Icon = "view_in_ar",
ImageSource = "Material",
ShowTitle = true
})

-- Bring section (placeholder only)
Tab:CreateSection("Bring")
do
Tab:CreateLabel({
Text = "Bring features disabled (sanitized).",
Description = "'Bring Mobs' behavior removed for safety."
})
end

-- DEFAULT distance stored locally (but NOT used to affect other objects)
local DEFAULT_DISTANCE = 5
local LocalSettings = {
BringDistance = DEFAULT_DISTANCE -- stored locally for UI only
}

-- HipHeight slider: affects only the local player's humanoid (safe)
Tab:CreateSection("Local Player")
Tab:CreateSlider({
Name = "HipHeight",
Range = {0, 200},
Increment = 1,
CurrentValue = 2, -- reasonable default
Callback = function(value)
-- apply only to local player's humanoid if available
local success, err = pcall(function()
if LocalPlayer and LocalPlayer.Character and LocalPlayer.Character:FindFirstChildOfClass("Humanoid") then
local humanoid = LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
humanoid.HipHeight = tonumber(value) or humanoid.HipHeight
else
-- optionally store the value and apply later when character spawns
LocalSettings.PendingHipHeight = value
end
end)
if not success then
warn("Failed to set HipHeight:", err)
end
end
})

-- Set Distance slider: stores a local value (UI-only)
Tab:CreateSlider({
Name = "Set Distance",
Range = {0, 200},
Increment = 1,
CurrentValue = DEFAULT_DISTANCE,
Callback = function(value)
LocalSettings.BringDistance = tonumber(value) or DEFAULT_DISTANCE
print("Local BringDistance updated (UI-only):", LocalSettings.BringDistance)
end
})

-- Auto section (placeholders only)
Tab:CreateSection("Auto")
Tab:CreateToggle({
Name = "Auto Shoot",
Description = "Original auto-shoot behaviour removed for safety.",
CurrentValue = false,
Callback = function(value)
print("Auto Shoot toggle changed (placeholder):", value)
-- IMPORTANT: no shooting automation is run in this sanitized version
end
})

Tab:CreateToggle({
Name = "Auto Collect",
Description = "Original auto-collect behaviour removed for safety.",
CurrentValue = false,
Callback = function(value)
print("Auto Collect toggle changed (placeholder):", value)
-- No collection code here
end
})

-- Revives section (placeholders only)
Tab:CreateSection("Revives")
Tab:CreateToggle({
Name = "Revive (Team)",
Description = "Revive automation removed for safety.",
CurrentValue = false,
Callback = function(value)
print("Revive (Team) placeholder:", value)
end
})

Tab:CreateToggle({
Name = "Revive (Yourself)",
Description = "Revive automation removed for safety.",
CurrentValue = false,
Callback = function(value)
print("Revive (You) placeholder:", value)
end
})

-- Apply any pending local settings when character spawns
if LocalPlayer then
LocalPlayer.CharacterAdded:Connect(function(char)
-- apply pending HipHeight if present
if LocalSettings.PendingHipHeight then
local ok, err = pcall(function()
local humanoid = char:FindFirstChildOfClass("Humanoid")
if humanoid then
humanoid.HipHeight = tonumber(LocalSettings.PendingHipHeight) or humanoid.HipHeight
end
end)
if not ok then warn("Failed to apply pending HipHeight:", err) end
LocalSettings.PendingHipHeight = nil
end
end)
end

-- Notification (non-intrusive)
pcall(function()
Luna:Notification({
Title = "Gibssss Loaded (safe)",
Content = "Sanitized script loaded. Exploit features removed.",
Icon = "check_circle",
ImageSource = "Material"
})
end)

print("Sanitized Gibssss Hub loaded. Exploit features were removed for safety.")
